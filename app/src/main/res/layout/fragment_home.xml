<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_gp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">

                <Button
                    android:id="@+id/boardResult"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/boardresult"
                    android:paddingTop="16dp"
                    android:text="Board \n Result"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_airtel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">


                <Button
                    android:id="@+id/admissionResult"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/admissionresult"
                    android:paddingTop="16dp"
                    android:text="Admission \n Test"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_1"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_robi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="1dp">


                <Button
                    android:id="@+id/pscResult"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/pscresult"
                    android:paddingTop="16dp"
                    android:text="PSC \n Exam"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_bl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">

                <Button
                    android:id="@+id/nuExam"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/nuexam"
                    android:paddingTop="16dp"
                    android:text="NU \n Exam"
                    android:textColor="#fff"
                    android:textSize="12sp" />


            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_2"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">

                <Button
                    android:id="@+id/medicalResult"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/medicalresult"
                    android:paddingTop="16dp"
                    android:text="Medical \n BDMC"
                    android:textColor="#fff"
                    android:textSize="12sp" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_tk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">

                <Button
                    android:id="@+id/othersResult"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/othersresult"
                    android:paddingTop="16dp"
                    android:text="Others \n Exam"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_2"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_medicalResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">

                <Button
                    android:id="@+id/medicalResult1"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/medicalresult"
                    android:paddingTop="16dp"
                    android:text="Medical \n BDMC"
                    android:textColor="#fff"
                    android:textSize="12sp" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_othersResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                card_view:cardCornerRadius="1dp">

                <Button
                    android:id="@+id/othersResult1"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/othersresult"
                    android:paddingTop="16dp"
                    android:text="Others \n Exam"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>


    </ScrollView>


<android.support.v4.widget.NestedScrollView
android:id="@+id/bottom_sheet"
android:layout_width="match_parent"
android:layout_height="60dp"
android:clipToPadding="true"
android:outlineProvider="bounds"
app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


<com.google.android.gms.ads.AdView
    android:id="@+id/adView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    ads:adSize="BANNER"
    ads:adUnitId="@string/ad_id_banner"></com.google.android.gms.ads.AdView>


</android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

